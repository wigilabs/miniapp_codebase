{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true,
		"jest": true,
		"es6": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["html"],
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"settings": {
		"html/html-extensions": [".html", ".axml"]
	},
	"rules": {
		"id-match": [
			"error",
			"(^(?:[a-z]+([A-Z][a-z]{0,})*)$)|(^AccountId$|^LineOfBusiness$|^UserProfileID$)|^(([A-Z][a-z]*)*(Adapter$|Port$|Model$|Key$|UseCase$|Data$|^Mock\\w*))|^(([A-Z]*_)*(NUMBER$))",
			{"onlyDeclarations": true}
		],
		"no-magic-numbers": [
			"error",
			{
				"ignoreArrayIndexes": true,
				"ignoreDefaultValues": true,
				"ignoreClassFieldInitialValues": true,
				"ignore": [0, 1, 2, 3, 4, 5, 6]
			}
		],
		"no-console": ["error", {"allow": ["error"]}],
		"one-var": ["error", {"var": "always", "let": "always", "const": "never"}],
		"id-length": ["error", {"min": 3, "max": 30}],
		"eqeqeq": "error",
		"no-use-before-define": "error",
		"camelcase": "error",
		"init-declarations": "error",
		"consistent-return": "error",
		"default-case": "error",
		"max-depth": ["error", {"max": 3}],
		"guard-for-in": "error",
		"require-await": "error",
		"no-eq-null": "error",
		"no-throw-literal": "error",
		"no-negated-condition": "error",
		"no-nested-ternary": "error",
		"max-statements": ["error", 15],
		"sort-imports": "error",
		"sort-keys": "error",
		// "space-before-blocks": ["error", "never"], //validar integracion con prettier
		//"no-warning-comments": "warn",
		"no-empty-function": "error",
		"array-callback-return": "error",
		"no-await-in-loop": "error",
		"no-duplicate-imports": "error",
		"no-self-compare": "error",
		"no-template-curly-in-string": "error",
		"no-unmodified-loop-condition": "error",
		"accessor-pairs": "error",
		"arrow-body-style": "error",
		"block-scoped-var": "error",
		"capitalized-comments": "error",
		"class-methods-use-this": "warn",
		"complexity": "error",
		"consistent-this": "error",
		"curly": "error",
		"dot-notation": "error",
		"func-name-matching": "error",
		"func-names": ["error", "as-needed"],
		"func-style": ["error", "declaration", {"allowArrowFunctions": true}],
		"max-lines": ["error", {"skipBlankLines": true, "skipComments": true}],
		"max-nested-callbacks": ["error", 3],
		"max-params": "error",
		"multiline-comment-style": ["error", "bare-block"],
		"new-cap": ["error", {"capIsNewExceptions": ["Page", "App", "Component"]}],
		"no-alert": "error",
		"no-array-constructor": "error",
		"no-bitwise": "error",
		"no-caller": "error",
		"no-confusing-arrow": ["error", {"allowParens": false}],
		"no-continue": "error",
		"no-div-regex": "error",
		"no-else-return": "error",
		"no-eval": "error",
		"no-extend-native": "error",
		"no-extra-bind": "error",
		"no-extra-label": "error",
		"no-implicit-coercion": "error",
		"no-implicit-globals": "error",
		"no-implied-eval": "error",
		"no-inline-comments": "error",
		"no-invalid-this": "error",
		"no-iterator": "error",
		"no-label-var": "error",
		"no-labels": "error",
		"no-lone-blocks": "error",
		"no-lonely-if": "error",
		"no-loop-func": "error",
		"no-mixed-operators": "error",
		"no-multi-assign": "error",
		"no-multi-str": "error",
		"no-new": "error",
		"no-new-func": "error",
		"no-new-object": "error",
		"no-new-wrappers": "error",
		"no-octal-escape": "error",
		"no-plusplus": "error",
		"no-proto": "error",
		"no-restricted-imports": "error",
		"no-restricted-globals": "error",
		"no-restricted-properties": "error",
		"no-restricted-syntax": "error",
		"no-return-assign": "error",
		"no-script-url": "error",
		"no-sequences": "error",
		"no-shadow": "error",
		"no-undef-init": "error",
		"no-undefined": "error",
		"no-underscore-dangle": "error",
		"no-unneeded-ternary": "error",
		"no-unused-expressions": ["error", {"allowTernary": true}],
		"no-useless-call": "error",
		"no-useless-computed-key": "error",
		"no-useless-concat": "error",
		"no-useless-constructor": "error",
		"no-useless-rename": "error",
		"no-useless-return": "error",
		"no-var": "error",
		"no-void": "error",
		"object-shorthand": "error",
		"operator-assignment": "error",
		"prefer-arrow-callback": "error",
		"prefer-const": "error",
		"prefer-destructuring": "error",
		"prefer-numeric-literals": "error",
		"prefer-spread": "error",
		"prefer-template": "error",
		"prefer-rest-params": "error",
		"sort-vars": "error",
		"spaced-comment": "error",
		"strict": "error",
		"symbol-description": "error",
		"vars-on-top": "error",
		"yoda": "error",
		"lines-around-comment": [
			"error",
			{
				"beforeBlockComment": true,
				"afterBlockComment": true,
				"beforeLineComment": true,
				"afterLineComment": true,
				"allowBlockStart": true,
				"allowBlockEnd": true,
				"allowObjectStart": true,
				"allowObjectEnd": true,
				"allowArrayStart": true,
				"allowArrayEnd": true
			}
		],
		"lines-between-class-members": "error",
		"max-len": [
			"error",
			{
				"code": 120,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true,
				"ignoreUrls": true,
				"tabWidth": 2,
				"ignoreComments": true,
				"ignoreTrailingComments": true
			}
		],
		"max-statements-per-line": "error",
		"max-lines-per-function": "error",
		"quotes": ["error", "double"]
	},
	"globals": {
		"App": "readonly",
		"Page": "readonly",
		"getApp": "writable",
		"my": "readonly",
		"Component": "readonly"
	},
	"overrides": [
		{
			"files": ["*test.js"],
			"rules": {
				"max-statements": ["error", 30],
				"max-lines": ["error", {"max": 650, "skipBlankLines": true, "skipComments": true}],
				"no-new": "off",
				"max-lines-per-function": ["error", {"max": 150, "skipBlankLines": true, "skipComments": true}]
			}
		}
	]
}
